<?php /** @var $this Itoris_LayeredNavigation_Block_Layer_MultiFilter_Category_Tree */ ?>
<ol class="ln-tree">
<?php foreach($this->getItems() as $_item) { ?>
	<?php /** @var $_item Mage_Catalog_Model_Category */
		if ($_item->getProductCount() <= 0) {
			continue;
		}
	?>
    <li>
		<label for="item_<?php echo $_item->getEntityId() ?>" class="itoris_laynav_category<?php if ($_item->getInState()) { ?> active <?php } ?>">
			<input type="checkbox" class="itoris_laynav_checkbox" id="item_<?php echo $_item->getEntityId() ?>"<?php if ($_item->getInState()) { ?> checked="checked" <?php } ?> name="<?php echo $_item->getFilter()->getRequestVar() ?>[]" value="<?php echo $_item->getEntityId() ?>" />
			<div class="styled-checkbox"></div>
			<a <?php if ($_item->getIsAnchor()) { ?> onclick="LayNav.categoryClick(this); return false;" <?php } ?> href="<?php echo $_item->getUrl() ?>"><?php echo $_item->getName() ?> (<?php echo $_item->getProductCount() ?>)</a></label>
		<?php echo $this->getLayerHtml($_item); ?>
    </li>
<?php } ?>
</ol>
