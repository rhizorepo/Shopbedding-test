<?php
/** @var $this Mage_Page_Block_Html_Pager */
?>
<?php if(count($this->getCollection()->getAllIds())): ?>

    <?php if($this->getUseContainer()): ?>
    <div class="pager">
    <?php endif ?>

    <?php if($this->getShowAmounts()): ?>
    <p class="amount">
        <?php if($this->getLastPageNum()>1): ?>
            <?php echo $this->__('Items %s to %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
        <?php else: ?>
            <strong><?php echo $this->__('%s Item(s)', $this->getTotalNum()) ?></strong>
        <?php endif; ?>
    </p>
    <?php endif ?>

    <?php if($this->getShowPerPage()): ?>
    <div class="limiter">
        <label><?php echo $this->__('Show') ?></label>
        <select onchange="setLocation(this.value)">
        <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
            <option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                <?php echo $_limit ?>
            </option>
        <?php endforeach; ?>
        </select> <?php echo $this->__('per page') ?>
    </div>
    <?php endif ?>

    <?php if($this->getLastPageNum()>1): ?>
    <div class="pages">
        <a onclick="LayNav.sendWithAdditionalParams({p : <?php echo $this->getCollection()->getCurPage(-1) ?>}); return false;" class="previous<?php if(!$this->getAnchorTextForPrevious()): ?> i-previous<?php endif;?><?php if ($this->isFirstPage()): ?> disabled-link<?php endif;?>" href="<?php echo $this->getPreviousPageUrl() ?>" title="<?php echo $this->__('Previous') ?>">
            <?php if(!$this->getAnchorTextForPrevious()): ?>
                &lt;&lt;
            <?php else: ?>
                <?php echo $this->getAnchorTextForPrevious() ?>
            <?php endif;?>
        </a>

        <?php if ($this->canShowFirst()): ?>
            <a onclick="LayNav.sendWithAdditionalParams({p : <?php echo $this->getCollection()->getCurPage(1) ?>}); return false;" class="first" href="<?php echo $this->getFirstPageUrl() ?>">1</a>
        <?php endif;?>

        <?php if ($this->canShowPreviousJump()): ?>
            <a onclick="LayNav.sendWithAdditionalParams({p : <?php echo $this->getPreviousJumpPage() ?>}); return false;" class="previous_jump" title="" href="<?php echo $this->getPreviousJumpUrl() ?>">...</a>
        <?php endif;?>

        <?php foreach ($this->getFramePages() as $_page): ?>
            <?php if ($this->isPageCurrent($_page)): ?>
                <a href="#" class="disabled-link" onclick="return false;"><?php echo $_page ?></a>
            <?php else: ?>
                <a onclick="LayNav.sendWithAdditionalParams({p : <?php echo $_page ?>}); return false;" href="<?php echo $this->getPageUrl($_page) ?>"><?php echo $_page ?></a>
            <?php endif;?>
        <?php endforeach;?>


        <?php if ($this->canShowNextJump()): ?>
            <a onclick="LayNav.sendWithAdditionalParams({p : <?php echo $this->getNextJumpPage() ?>}); return false;" class="next_jump" title="" href="<?php echo $this->getNextJumpUrl() ?>">...</a>
        <?php endif;?>

        <?php if ($this->canShowLast()): ?>
          <a onclick="LayNav.sendWithAdditionalParams({p : <?php echo $this->getCollection()->getLastPageNumber() ?>}); return false;"  class="last" href="<?php echo $this->getLastPageUrl() ?>"><?php echo $this->getLastPageNum() ?></a>
        <?php endif;?>

        <a onclick="LayNav.sendWithAdditionalParams({p : <?php echo $this->getCollection()->getCurPage(+1) ?>}); return false;"   class="next<?php if(!$this->getAnchorTextForNext()): ?> i-next<?php endif; ?><?php if ($this->isLastPage()): ?> disabled-link<?php endif;?>" href="<?php echo $this->getNextPageUrl() ?>" title="<?php echo $this->__('Next') ?>">
            <?php if(!$this->getAnchorTextForNext()): ?>
                &gt;&gt;
            <?php else: ?>
                <?php echo $this->getAnchorTextForNext() ?>
            <?php endif;?>
        </a>
    
    </div>
    <?php endif; ?>

    <?php if($this->getUseContainer()): ?>
    </div>
    <?php endif ?>

<?php endif ?>
