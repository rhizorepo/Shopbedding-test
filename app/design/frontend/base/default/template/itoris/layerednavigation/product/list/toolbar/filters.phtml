<?php $filters = Mage::getSingleton('itoris_layerednavigation/layer')->getState()->getFilters(); ?>
<?php $display = false;
foreach ($filters as $filter) {
    if ($filter->getName() != 'Price') {$display = true; break;}
} ?>
<?php if ($display): ?>
    <div class="active-filters">
        <span><?php echo $this->__('Your selections') ?>:</span>
        <?php foreach ($filters as $filter): ?>
            <?php if ($filter->getName() == 'Price'): continue; endif; ?>
            <span class="active-filter-container">
                <span class="filter-name"><?php echo $this->__($filter->getLabel()); ?></span>
                <button class="clear-filter-button" type="button"
                            onclick="$('<?php echo $filter->getFilter()->getRequestVar() ?>_item_<?php echo $filter->getValue() ?>').click(); return false;" ></button>
                </span>
        <?php endforeach ?>
    </div>
<script>
    jQuery('.itoris-items-counter').show();
</script>
<?php else: ?>
<script>
    jQuery('.itoris-items-counter').hide();
</script>
<?php endif ?>