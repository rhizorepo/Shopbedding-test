/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if ($this->getCurrencyCount() > 1): ?>
<?php $currencies = $this->getCurrencies(); ?>
<?php $currentCurrencyCode = $this->getCurrentCurrencyCode(); ?>
<div class="switch switcher-currency">
    <div class="switch-wrapper" id="currencySelect">
        <ul>
        	<?php foreach ($currencies as $_code => $_name): ?>
	        	<?php if($_code == $currentCurrencyCode): ?>
	            <li class="current currency-<?php echo $this->htmlEscape(Mage::app()->getStore()->getCode()) ?>">
	                <span><?php echo $this->htmlEscape($currentCurrencyCode) ?></span>
	            </li>
	            <?php else: ?>
	                <li class="currency-<?php echo $_code ?>">
	                    <a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"><?php echo $_code ?></a>
	                </li>
	           <?php endif; ?>
            <?php endforeach; ?>
        </ul>
    </div>
</div>
<?php endif; ?>

<script type="text/javascript">
	jQuery(document).ready(function(){
		jQuery('#currencySelect li:first').addClass('first');
		jQuery('#currencySelect li').eq(1).addClass('second');
	});
</script>
