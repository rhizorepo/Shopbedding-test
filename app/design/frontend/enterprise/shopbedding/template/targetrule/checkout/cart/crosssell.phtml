?>
<?php if ($this->hasItems()):?>
<div class="crosssell">
    <h2><?php echo $this->__('Customers Who Bought Items In Your Shopping Cart Also Bought:') ?></h2>
    <ul>
    <?php foreach ($this->getItemCollection() as $_item): ?>
		<?php
			$options = array(
				'_escape' => true
			);
			
			$productUrl = $_item->getUrlModel()->getUrl($_item, $options);
			
            if($_item->getVisibility() == Mage_Catalog_Model_Product_Visibility::VISIBILITY_NOT_VISIBLE) {
                $parentIds = Mage::getModel('catalog/product_type_configurable')->getParentIdsByChild($_item->getId());
				
                if(!empty($parentIds)) {
                    $parent = Mage::getModel('catalog/product')->load($parentIds[0]);
					
					if($parent->getId()) {
						$options['_query'] = sprintf('product_id=%s', $_item->getId());
						$productUrl = $parent->getUrlModel()->getUrl($parent, $options);
					}
                }
            }
		?>
		
        <li class="item">
            <a class="product-image" href="<?php echo $productUrl ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'image')->resize(200); ?>" width="200" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" title="<?php echo $this->htmlEscape($_item->getName()) ?>" /></a>
            <div class="product-shop">
                <h3 class="product-name"><a href="<?php echo $productUrl ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a></h3>
                <?php echo $this->getPriceHtml($_item, true) ?>
                <p><button class="button btn-cart" onclick="_gaq.push(['_trackEvent', 'ActionButtons', '<?php echo sprintf('Add_To_Cart_CrossSell_%s', $_item->getId())?>']);setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')" type="button"></button></p>
            </div>
        </li>
    <?php endforeach; ?>
    </ul>
</div>
<?php endif;?>
