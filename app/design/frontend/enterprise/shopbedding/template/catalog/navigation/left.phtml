/**
 * Category left navigation
 *
 * @see Mage_Catalog_Block_Navigation
 */
?>
<?php if (!Mage::registry('current_category')) return ?>
<?php 
    $_current = Mage::registry('current_category');
    $_currentPath = $_current->getPathIds();
    $_categories = Mage::helper('catalog/category')->getStoreCategories();
    $_current_children = $this->getCurrentChildCategories()
?>
<?php $_count = is_array($_categories)?count($_categories):$_categories->count(); ?>
<?php if($_count): ?>
<div class="block block-layered-nav">
    <div class="block-content">
        <ul id="narrow-by-list2">
            <?php foreach ($_categories as $_category): ?>
                <?php if($_category->getIsActive()): ?>
                    <li class="level-1">
                        <a href="<?php echo $this->getCategoryUrl($_category) ?>"<?php if ($this->isCategoryActive($_category)): ?> class="current"<?php endif; ?>>
                            <?php echo $this->htmlEscape($_category->getName()) ?>
                        </a>                    
                        <?php if (in_array($_category->getId(), $_currentPath)): ?>
                            <ul>
                                <?php foreach($_category->getChildrenCategories() as $_child): ?>
                                    <?php if($_child->getIsActive()): ?>
                                        <li>
                                            <a href="<?php echo $this->getCategoryUrl($_child) ?>"<?php if ($this->isCategoryActive($_child)): ?> class="current"<?php endif; ?>>
                                                <?php echo $this->htmlEscape($_child->getName()) ?>
                                            </a>
                                        </li>
                                    <?php endif; ?>
                                <?php endforeach; ?>
                            </ul>
                        <?php endif; ?>
                    </li>
                <?php endif; ?>
            <?php endforeach; ?>
        </ul>
        <script type="text/javascript">decorateDataList('narrow-by-list2')</script>
    </div>
    <?php echo $this->getLayout()->createBlock('cms/block')->setBlockId('banner-left-col')->toHtml() ?>
</div>
<?php endif; ?>
