<?php
/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>
<?php if($this->getCollection()->getSize()): ?>
<div class="toolbar">
    <div class="pager">
	   <div class="sort-by">
	        <label><?php echo $this->__('Sort by') ?></label>
	        <select onchange="setLocation(this.value)">
	        
	        <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
	                <?php $_dir = ($_key == 'name') ? 'asc' : 'desc'; ?>
	            <?php if ($_order == 'Price') : ?>
	            <option value="<?php echo $this->getOrderUrl($_key, "asc") ?>"<?php if($this->isOrderCurrent($_key) && isset($_GET['dir']) && $_GET['dir'] == 'asc'): ?> selected="selected"<?php endif; ?>>
	                <?php echo $_order; ?> (Low to High)
	            </option>
	            <option value="<?php echo $this->getOrderUrl($_key, "desc") ?>"<?php if($this->isOrderCurrent($_key) && isset($_GET['dir']) && $_GET['dir'] == 'desc'): ?> selected="selected"<?php endif; ?>>
	                <?php echo $_order; ?> (High to Low)
	            </option>
	            <?php elseif (($_order == 'Position') | ($_order == 'Relevance' ) ) : ?>
	            <option value="<?php echo $this->getOrderUrl($_key, "asc") ?>"<?php if($this->isOrderCurrent($_key)): ?> selected="selected"<?php endif; ?>>
	                <?php echo 'Best Match'; ?>
	            </option>
	            <?php else: ?>
	            <option value="<?php echo $this->getOrderUrl($_key, $_dir) ?>"<?php if($this->isOrderCurrent($_key)): ?> selected="selected"<?php endif; ?>>
	                <?php echo $_order; ?>
	            </option>
	            <?php endif; ?>
	        <?php endforeach; ?>
	        </select>
	    </div> 
        <?php echo $this->getPagerHtml() ?> 
                <div class="limiter">
            <select onchange="setLocation(this.value)">
            <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
                <option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                    <?php echo $_limit ?>
                    <?php echo $this->__('per page') ?>
                </option>
            <?php endforeach; ?>
            
            </select>
        </div> 
        <p class="amount">
	        <?php echo $this->__('Items %s-%s of %s', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
	    </p> 
        <div class="clearfix"></div>
    </div>
    
</div>
<?php endif ?>
