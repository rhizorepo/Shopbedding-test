<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="breadcrumbs">
            <action method="setTemplate" ifconfig="snippets/system/breadcrumbs"><template>magmodules/snippets/breadcrumbs.phtml</template></action>
        </reference>
		<reference name="head">
			<action method="addCss" ifconfig="snippets/products/enabled"><stylesheet>magmodules/snippets.css</stylesheet> </action>
		</reference>			
    </default> 

    <catalog_product_view>
        <reference name="head">
            <block type="snippets/twitter" name="twittercards_meta" template="magmodules/snippets/head/twitter.phtml" />
            <block type="snippets/pinterest" name="pinterest_meta" template="magmodules/snippets/head/pinterest.phtml" />            
        </reference>
		<reference name="footer">
			 <action method="unsetData"><key>cache_lifetime</key></action>
			 <action method="unsetData"><key>cache_tags</key></action>
			<block type="snippets/products" name="snippets_footer_product" as="snippets_footer" before="-" template="magmodules/snippets/product/footer.phtml" />
		</reference>
		<reference name="before_body_end">
			<block type="snippets/hidden" name="snippets_hidden_block" as="snippets_hidden" after="-" />
		</reference>
    </catalog_product_view>
</layout> 