			</adminhtml>	
        </blocks>

        <models>
            <collection>
                <class>Shopbedding_Collection_Model</class>
            </collection>    
			<catalog>
				<rewrite>
					<product_attribute_backend_media>Shopbedding_Collection_Model_Catalog_Product_Attribute_Backend_Media</product_attribute_backend_media>
				</rewrite>
			</catalog>	
			<catalog_resource_eav_mysql4>
				<rewrite>
					<product_attribute_backend_media>Shopbedding_Collection_Model_Catalog_Resource_Eav_Mysql4_Product_Attribute_Backend_Media</product_attribute_backend_media>
				</rewrite>
			</catalog_resource_eav_mysql4>
        </models>

        <resources>
            <collection_setup>
                <setup>
                    <module>Shopbedding_Collection</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
            </collection_setup>
        </resources>     
    </global>
