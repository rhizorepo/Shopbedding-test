    <global>
        <blocks>
            <collection>
                <class>Shopbedding_Collection_Block</class>
            </collection>
			<adminhtml>
				<rewrite>
					<catalog_product_helper_form_gallery_content>Shopbedding_Collection_Block_Adminhtml_Catalog_Helper_Form_Gallery_Content</catalog_product_helper_form_gallery_content>
