<config>
    <sections>
        <shopbedding_update_feed>
            <label>Update Feed</label>
            <tab>catalog</tab>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Update Feed Cron Settings</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <findfeed_update translate="label">
                            <sort_order>40</sort_order>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </findfeed_update>
                        <cron_day translate="label">
                            <label>Cron Day</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shopbedding_updatefeed/adminhtml_system_source_cron_day</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cron_day>
                        <cron_hours translate="label">
                            <label>Cron Hour</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shopbedding_updatefeed/adminhtml_system_source_cron_hours</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cron_hours>
                        <cron_minutes>
                            <label>Cron Minutes</label>
                            <frontend_type>select</frontend_type>
                            <source_model>shopbedding_updatefeed/adminhtml_system_source_cron_minutes</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cron_minutes>
                        <cron_run translate="label">
                            <label>Update Feed</label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>shopbedding_updatefeed/adminhtml_system_config_form_button</frontend_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cron_run>
                    </fields>
                </settings>
                <file>
                    <label>Data Feed File</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>400</sort_order>
                    <fields>
                        <file_upload>
                            <label>Upload File</label>
                            <comment>with name: cse-feed-new.xlsx</comment>
                            <frontend_type>button</frontend_type>
                            <frontend_model>shopbedding_updatefeed/adminhtml_system_config_form_upload</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </file_upload>
                        <file_download>
                            <label>Download File</label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>shopbedding_updatefeed/adminhtml_system_config_form_download</frontend_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </file_download>
                    </fields>
                </file>
            </groups>
        </shopbedding_update_feed>
    </sections>
</config>