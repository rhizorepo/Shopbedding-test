<?xml version="1.0"?>
<config>
	<tabs>
		<hunter_crawler translate="label" module="hunter_crawler">
			<label>FPC Crawler</label>
			<sort_order>600</sort_order>
		</hunter_crawler>
	</tabs>
    <sections>
        <hunter_fpc_crawler translate="label" module="hunter_crawler">
            <label>Settings</label>
            <tab>hunter_crawler</tab>
            <frontend_type>text</frontend_type>
            <sort_order>600</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general_settings translate="label">
                    <label>General settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <processing_items_count translate="label">
                            <label>Count of cron processing items per time</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <comment>FPC Crawler will be refresh cache for several items per time</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </processing_items_count>
                        <manual_processing_items_count translate="label">
                            <label>Count of manual processing items per time</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <comment>Count of items by manual refresh</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </manual_processing_items_count>
                        <cron_lock translate="label">
                            <label>Lock FPC crawler cron</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <comment>To lock all FPC crawler cron processes</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cron_lock>
					</fields>
				</general_settings>
            </groups>
        </hunter_fpc_crawler>
    </sections>
</config>
